@model Library_Management.Models.RoleVM

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-primary text-center " style="font-family:'Times New Roman'; font-weight:bold">Create Role  </h1>
<p class="text-danger" id="role">@ViewBag.msg</p>


<div class="row text-primary" style="font-family:'Times New Roman'; font-weight:bold" >
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script type="text/javascript">
    $(document).ready(function () {
        $("#role").fadeOut(5000);
    });
</script>
}
